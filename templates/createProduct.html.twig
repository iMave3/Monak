{% extends "/base.html.twig" %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/tags.css') }}">
{% endblock %}


{% block body %}
	<div>
		<h1 style="margin: 0 auto 30px auto; width: fit-content;">
			Vytvořit produkt
		</h1>

		<div class="product" style="max-width: 260px">
			{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
			<div class="imageDiv">{{ form_row(form.image) }}</div>
			<div class="isAvailableDiv">{{ form_row(form.available) }}</div>
			<h2 class="productName" style="margin: 0 auto; width: fit-content;">{{ form_row(form.name) }}</h2>
			<h3 class="productPrice lastH" style="margin: 0 auto; width: fit-content;">{{ form_row(form.price) }}</h3>
			<button type="submit" class="lastButton productTag productBTN">Uložit</button>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

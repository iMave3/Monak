			<a href="../img/build-comp.jpg" target="_blank"><img src="../img/build-comp.jpg" alt="" id="build"></a>
		</div>

		<div
			class="form-container">
			{# Tento blok obsahuje kontaktní formulář, který je dynamicky generován pomocí Twig formu. #}
			{{ form_start(form) }}
			<div class="form-group">
				{{ form_widget(form) }}
				{# Všechny jednotlivé widgety (vstupní pole) formuláře jsou zde vykresleny. #}
			</div>
			<button type="submit" class="submit-btn">Odeslat</button>
			{# Tlačítko pro odeslání formuláře. #}
			{{ form_end(form) }}
			{# Konec formuláře. #}
		</div>
	</div>
{% endblock %}
